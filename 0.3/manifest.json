{
	"name": "runnr",
	"version": "0.3",
	"description": "__MSG_extDescription__",
	"homepage_url": "http://thebanggang.es/runnr/",
	"default_locale": "en",
	"manifest_version": 2,
	"offline_enabled": true,

	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "img/icon19.png",
			"38": "img/icon38.png"
		},
		"default_popup": "popup/popup.html"
	},

	"web_accessible_resources": [
		"img/runner.png"
	],

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"content_scripts": [
	    {
			"matches": ["*://www.tumblr.com/*"],
			"js": ["jquery.custom.min.js","content.js"],
			"css": ["style.css"]
	    }
	],

	"permissions": ["storage", "activeTab"]
}